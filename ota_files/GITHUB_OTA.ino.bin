#include <WiFi.h>
#include <HTTPClient.h>
#include <Update.h>

// ================= WIFI =================
const char* ssid = "LV426";
const char* password = "daruvar666";

// ================= GITHUB =================
// Direktni RAW link na bin fajl
const char* firmwareUrl =
  "https://raw.githubusercontent.com/zvonko-del/ajkule_test/test_ota/GITHUB_OTA.ino.bin";

// RAW link na version.txt (samo broj)
const char* versionUrl =
  "https://raw.githubusercontent.com/zvonko-del/ajkule_test/test_ota/version.txt";

// ================= VERZIJA =================
const int currentFirmwareVersion = 1;

// ================= TIMING =================
const unsigned long updateCheckInterval = 5 * 60 * 1000; // 5 minuta
unsigned long lastUpdateCheck = 0;

void connectToWiFi();
void checkForFirmwareUpdate();
int fetchLatestVersion();
bool downloadAndApplyFirmware();
bool startOTAUpdate(WiFiClient& client);

void setup() {
  Serial.begin(115200);
  delay(1000);

  Serial.println("\n=== ESP32 OTA UPDATE ===");
  Serial.printf("Trenutna verzija: %d\n", currentFirmwareVersion);

  connectToWiFi();
  checkForFirmwareUpdate();
}

void loop() {
  static unsigned long lastPrintTime = 0;

  // Ispis verzije svake 1 sekundu
  if (millis() - lastPrintTime >= 1000) {
    lastPrintTime = millis();
    Serial.printf("Trenutna firmware verzija: %d\n", currentFirmwareVersion);
  }

  // Provjera OTA svakih 5 minuta
  if (millis() - lastUpdateCheck >= updateCheckInterval) {
    lastUpdateCheck = millis();
    checkForFirmwareUpdate();
  }

  delay(10); // mali delay da loop ne bude prebrz
}

// ================= FUNKCIJE =================

void connectToWiFi() {
  Serial.print("Spajanje na WiFi");

  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }

  Serial.println("\nWiFi spojen");
  Serial.println("IP adresa: " + WiFi.localIP().toString());
}

void checkForFirmwareUpdate() {
  if (WiFi.status() != WL_CONNECTED) {
    Serial.println("WiFi nije spojen");
    return;
  }

  Serial.println("\nProvjera verzije...");

  int latestVersion = fetchLatestVersion();
  if (latestVersion < 0) {
    Serial.println("Ne mogu dohvatiti verziju");
    return;
  }

  Serial.printf("Trenutna verzija: %d\n", currentFirmwareVersion);
  Serial.printf("Najnovija verzija: %d\n", latestVersion);

  if (latestVersion > currentFirmwareVersion) {
    Serial.println("Nova verzija pronađena, pokrećem OTA...");

    if (downloadAndApplyFirmware()) {
      Serial.println("OTA uspješan, restart...");
      delay(2000);
      ESP.restart();
    } else {
      Serial.println("OTA nije uspio");
    }
  } else {
    Serial.println("Firmware je ažuran");
  }
}

int fetchLatestVersion() {
  WiFiClientSecure client;
  client.setInsecure(); // GitHub HTTPS

  HTTPClient http;
  http.begin(client, versionUrl);

  int httpCode = http.GET();
  if (httpCode == HTTP_CODE_OK) {
    String versionStr = http.getString();
    versionStr.trim();
    http.end();
    return versionStr.toInt();
  }

  Serial.printf("HTTP greška (verzija): %d\n", httpCode);
  http.end();
  return -1;
}

bool downloadAndApplyFirmware() {
  WiFiClientSecure client;
  client.setInsecure();

  HTTPClient http;
  http.setFollowRedirects(HTTPC_FORCE_FOLLOW_REDIRECTS); // sigurno prati redirect
  http.begin(client, firmwareUrl);

  int httpCode = http.GET();
  Serial.printf("Firmware HTTP kod: %d\n", httpCode);

  if (httpCode != HTTP_CODE_OK) {
    http.end();
    return false;
  }

  bool result = startOTAUpdate(*http.getStreamPtr());
  http.end();
  return result;
}

bool startOTAUpdate(WiFiClient& client) {
  Serial.println("Pokrećem OTA update...");

  if (!Update.begin(UPDATE_SIZE_UNKNOWN)) {
    Serial.println(Update.errorString());
    return false;
  }

  size_t written = Update.writeStream(client);

  if (written == 0) {
    Serial.println("Nista nije zapisano!");
    return false;
  }

  if (!Update.end()) {
    Serial.println(Update.errorString());
    return false;
  }

  if (!Update.isFinished()) {
    Serial.println("OTA nije zavrsen");
    return false;
  }

  Serial.printf("OTA zavrsen (%u bytes)\n", written);
  return true;
}
